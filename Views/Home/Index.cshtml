@{
    ViewData["Title"] = "FutArg11";
}

<h3 class="text-center my-2">JUEGOS DISPONIBLES</h3>
<hr />
<div class="text-center my-2">
    <small class="text-muted">
        <i class="fas fa-user text-info me-1"></i> Un Jugador &nbsp; | &nbsp;
        <i class="fas fa-users text-info me-1"></i> Multijugador
    </small>
</div>
<hr />
<div class="container">

    <div class="row text-center">

        <div class="col-md-4 mb-4">
            <a href="/Wordle" class="card h-100 shadow text-decoration-none text-dark">
                <div class="card-body">
                    <img src="~/images/futargwordle.jpg" alt="FutArg Wordle" class="card-img-top mb-3" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;" />
                    <h4 class="card-title"><i class="fas fa-user text-info me-2"></i> Wordle</h4>
                    <p class="card-text">Adiviná el jugador en 6 intentos.</p>
                </div>
            </a>
        </div>
        <br />
        <div class="col-md-4 mb-4">
            <a href="/Penales" class="card h-100 shadow text-decoration-none text-dark">
                <div class="card-body">
                    <img src="~/images/messipenal.jpg" alt="FutArg Penales" class="card-img-top mb-3" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;" />
                    <h4 class="card-title"><i class="fas fa-users text-info me-2"></i> Penales</h4>
                    <p class="card-text">Jugá una tanda con uno o más amigos</p>
                </div>
            </a>
        </div>
        <br />
        <div class="col-md-4 mb-4">
            <a href="/Impostor/Lobby" class="card h-100 shadow text-decoration-none text-dark">
                <div class="card-body">
                    <img src="~/images/impostor2.jpg" alt="FutArg Impostor" class="card-img-top mb-3" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;" />
                    <h4 class="card-title"><i class="fas fa-users text-info me-2"></i> Impostor</h4>
                    <p class="card-text">Jugá con amigos y descubran al impostor.</p>
                </div>
            </a>
        </div>
    </div>
    <h3 class="text-center my-3">PRÓXIMAMENTE...</h3>
    <hr />
    <div class="row text-center">

        <div class="col-md-6 mb-6">
            <a href="/FutArgGrid" class="card h-100 shadow text-decoration-none text-dark" style="pointer-events: none; opacity: 0.5;">
                <div class="card-body">
                    <img src="~/images/futarggrid.jpeg" alt="FutArg Grid" class="card-img-top mb-3" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;" />
                    <h4 class="card-title">Grid</h4>
                    <p class="card-text">Un clásico: uní clubes o nacionalidades con jugadores.</p>
                </div>
            </a>
        </div>


        <div class="col-md-6 mb-6">
            <a href="/FutArgTop10" class="card h-100 shadow text-decoration-none text-dark" style="pointer-events: none; opacity: 0.5;">
                <div class="card-body">
                    <img src="~/images/diego10.jpg" alt="FutArg Top 10" class="card-img-top mb-3" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;" />
                    <h4 class="card-title">Top 10</h4>
                    <p class="card-text">Posiciona jugadores, clubes o selecciones según diferentes consignas.</p>
                </div>
            </a>
        </div>

    </div>
</div>
<footer class="footer-fixed text-center py-2">
    <div class="container-fluid d-flex justify-content-center align-items-center">
        <span class="me-3 text-white">Partners Oficiales:</span>
        <a href="https://www.instagram.com/amper.imp" target="_blank" class="d-flex align-items-center me-3">
            <img src="~/images/amper.png" alt="Logo Partner" style="height:30px;">
        </a>
        <a href="https://www.instagram.com/pino.ar" target="_blank" class="d-flex align-items-center me-3">
            <img src="~/images/pinossea.png" alt="Logo Partner" style="height:30px;">
        </a>
    </div>
</footer>