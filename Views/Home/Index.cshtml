@{
    ViewData["Title"] = "FutArg11";
}

<h1 class="text-center my-4">JUEGOS DISPONIBLES</h1>

<div class="container">
    

    <div class="row text-center">

        <div class="col-md-6 mb-6">
            <a href="/Impostor/Lobby" class="card h-100 shadow text-decoration-none text-dark">
                <div class="card-body">
                    <img src="~/images/impostor.jpg" alt="FutArg Impostor" class="card-img-top mb-3" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;" />
                    <h3 class="card-title">Impostor</h3>
                    <p class="card-text">Jugá en línea con amigos y descubran al impostor.</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 mb-6">
            <a href="/Penales" class="card h-100 shadow text-decoration-none text-dark">
                <div class="card-body">
                    <img src="~/images/messipenal.jpg" alt="FutArg Penales" class="card-img-top mb-3" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;" />
                    <h3 class="card-title">Penales</h3>
                    <p class="card-text">Jugá una tanda con uno o más amigos</p>
                </div>
            </a>
        </div>

    </div>

    <h1 class="text-center my-4">PRÓXIMAMENTE...</h1>

    <div class="row text-center">

        <div class="col-md-4 mb-4">
            <a href="/FutArgGrid" class="card h-100 shadow text-decoration-none text-dark" style="pointer-events: none; opacity: 0.5;">
                <div class="card-body">
                    <img src="~/images/futarggrid.jpeg" alt="FutArg Grid" class="card-img-top mb-3" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;" />
                    <h3 class="card-title">FutArg Grid</h3>
                    <p class="card-text">Un clásico: cruzá clubes y nacionalidades del fútbol argentino.</p>
                </div>
            </a>
        </div>

        <div class="col-md-4 mb-4">
            <a href="/Wordle" class="card h-100 shadow text-decoration-none text-dark" style="pointer-events: none; opacity: 0.5;">
                <div class="card-body">
                    <img src="~/images/futargwordle.jpg" alt="FutArg Wordle" class="card-img-top mb-3" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;" />
                    <h3 class="card-title">FutArg Wordle</h3>
                    <p class="card-text">Adiviná el jugador en 6 intentos. Pistas por clubes, nacionalidad y época.</p>
                </div>
            </a>
        </div>

        <div class="col-md-4 mb-4">
            <a href="/FutArgTop10" class="card h-100 shadow text-decoration-none text-dark" style="pointer-events: none; opacity: 0.5;">
                <div class="card-body">
                    <img src="~/images/diego10.jpg" alt="FutArg Top 10" class="card-img-top mb-3" style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;" />
                    <h3 class="card-title">FutArg Top 10</h3>
                    <p class="card-text">Posiciona jugadores, clubes o selecciones según diferentes consigna.</p>
                </div>
            </a>
        </div>

    </div>
</div>